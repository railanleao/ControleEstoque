@model IEnumerable<ControleEstoque.Models.Produto>

@{
    ViewData["Title"] = "Produto Registrados";
}

<div class="container p-5">
    <div class="border border-light rounder p-5">
        <a asp-controller="Produto" asp-action="NovoProduto" class="btn btn-sm btn-outline-info">
            Novo Produto
        </a>
        <hr />
        <table class="table table-striped table-hover table-sm">
            <thead>
                <tr class="thead-light">
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                        <hr />
                    </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quatidade)
                        <hr />
                           <th>
                                @Html.DisplayNameFor(model => model.Preco)
                            <hr />
                              <th>
                                     @Html.DisplayNameFor(model => model.Categoria.Nome)
                                <hr />
                    <th>
                        Ações
                        <hr />
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                   <tr>
                       <td>
                           @Html.DisplayFor(modelItem => item.Nome)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => item.Quatidade)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => item.Preco)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => item.Categoria.Nome)
                       </td>
                       <td>
                           <div class="row">
                               <a asp-controller="Produto" asp-action="AtualizarProduto" 
                               asp-route-produtoId="@item.ProdutoId" 
                                    class="btn btn-sm btn-outline-primary rounded-circle">
                                    <i class="fa fa-pencil-square-o"></i>
                               </a>

                               <a asp-controller="Produto" asp-action="DetalhesProduto" 
                               asp-route-produtoId="@item.ProdutoId" 
                                    class="btn btn-sm btn-outline-warning rounded-circle">
                                    <i class="fa fa-tasks"></i>
                               </a>

                               <form asp-controller="Produto" asp-action="ExcluirProduto" 
                               asp-route-produtoId="@item.ProdutoId">
                                   <button type="submit" class="btn btn-sm btn-outline-danger rounded-circle">
                                           <i class="fa fa-times-circle"></i>
                                   </button>
                               </form>
                               
                           </div>
                       </td>
                   </tr> 
                }
            </tbody>
        </table> 
    </div>
</div>
