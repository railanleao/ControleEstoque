@model ControleEstoque.Models.Produto
@{
    ViewData["Title"] = "Novo Produto";
}

<h1>Novo Produto</h1>
<hr />
<div class="container p-5">
    <div class="row">
        <div class="col-6 border border-light rounded p-5 shadow">
            <h6>Novo Produto</h6>
            <hr />

            <form asp-action="NovoProduto">
                <div class="form-group">
                    <label>Nome</label>
                    <input asp-for="Nome" type="text" class="form-control form-control-sm" />
                </div>
                <div class="form-group">
                    <label>Quantidade</label>
                    <input asp-for="Quatidade" type="number" class="form-control form-control-sm" />
                </div>
                <div class="form-group">
                    <label>Preço</label>   @*step é para delimitar as casas a pós a virgula/ steo="0,01*@
                    <input asp-for="Preco" step="0,02" class="form-control form-control-sm" />
                </div>
                <div class="form-group">
                    <label>Categoria</label>@*asp-items é para acessar o selest lá no httpget*@
                    <select asp-for="CategoriaId" asp-items="ViewBag.CategoriaId" type="text" class="form-control form-control-sm"></select>
                </div>                
                <div class="container">
                    <div class="row">
                        <div>
                            <button type="submit" class="btn btn-sm btn-outline-success" >
                             Salvar
                            </button>
                        </div>
                        <div class="pl-1">
                            <a class="btn btn-sm btn-light" asp-action="Index">Voltar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
